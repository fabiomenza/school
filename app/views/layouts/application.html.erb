<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

        <!-- load jQuery -->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>

        <!-- load Galleria -->
        <script src="/assets/galleria-1.3.5.min.js"></script>
</head>
<body>
<div id=main-wrapper>
  <div id=header-wrapper>
      <a href="/"><%= image_tag "logo.jpg", id: "logo" %> </a>
    </div><!-- end of header-wrapper -->
    <div id=nav>
     	  <ul class=landmark-menu>
	    <li ><%= link_to "Home", root_path %></li>
	    <li ><%= link_to "Courses", courses_path %></li>
	    <li ><%= link_to "Curricula", curricula_path %></li>
	    <li ><%= link_to "Services", services_path %></li>
	    <li ><%= link_to "Structures", structures_path %></li>
	    <li ><%= link_to "Events", events_path %></li>
	  </ul>
    </div>
    <div id=page-wrapper>
      <div id=content>
		<!-- Qui viene reso il contenuto della pagina -->
		<%= yield %>

      </div>
	  <div id=sidebar-right>
	    <div id=structural-block>
	      <ul class=menu>
			<%= yield :structuralLinkMenu %>
	      </ul>
	    </div> 
	    <div id=semantic-block>
	      <ul class=menu>
	      		<%= yield :semanticLinkMenu %>
	      </ul>
	    </div>
	</div>
      </div>


    <div id=footer-wrapper>
	<div id=nav>
	     	  <ul class=landmark-menu>
		    <li ><a href="/bureaucracy">Bureaucracy</a></li>
		    <li ><a href="/mission">Mission</a></li>
		    <li ><a href="/history">History</a></li>
		    <li ><a href="/awards">Awards</a></li>
		    <li ><a href="/how_to_get_there">How to reach</a></li>
		    <li ><a href="/contacts">Contacts</a></li>
		</ul>
	</div>
    </div>
</div>
</body>
</html>
