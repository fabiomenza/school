<%= title "Listing Structures" %>

<%= link_to "New Structure", new_structure_path, {class: "new_button"} %>

<br><br>

<table class="styled-table" >
	<thead>
		<tr>
			<th>Name </th>

			
			<th colspan=4></th>


		</tr>

	</thead>
	<tbody>

			<% @structures.each do |structure| %>
				<tr>
					<td><%= structure.name %></td>
					<td><%= link_to 'Show', structure_path(structure) %></td>
					<td><%= link_to 'Edit', structure_path(structure) + "/edit" %></td>
					<td><%= link_to 'Destroy', structure_path(structure), method: :delete,data: { confirm: 'Are you sure?' }  %></td>

				</tr>

			<% end %>

	</tbody>


</table>

<%= will_paginate @structures %>

<%= render 'shared/hide_semantic_link' %>
<%= render 'shared/hide_structural_link' %>
