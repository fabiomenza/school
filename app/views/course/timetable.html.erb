<%= title "Timetable for course #{@course.name}" %>


<table class="styled-table timetable" >
	<thead>
	<tr>
		<th colspan="1"></th>
		<% @weekday.each do |day| %>
			<th><%= day %></th>
		<% end %>
	</tr>
	</thead>
	<tbody>
		<% @rows.each do |row| %>
			<tr>
				<% row.each do |classroom| %>
				
					<% if classroom.is_a? Integer %>
						<td class="time"><%= "#{classroom}:00" %></td>
					<% elsif classroom.is_a? Hash %>
						<td class="classroom"><%= link_to classroom[:name], classroom_path(classroom[:id]) %></td>
					<% else %>
						<td></td>				
					<% end %>

				<% end %>

			</tr>
		<% end %>

		
		
	</tbody>

</table>


<%= render "shared/structural_link" %>
<%= render "shared/semantic_link" %>