<h1>Timetable for course <%= @course.name %></h1>


<table class="styled-table" >
	<thead>
	<tr>
		<th colspan="1"></th>
		<% @weekday.each do |day| %>
			<th><%= day %></th>
		<% end %>
	</tr>
	</thead>
	<tbody>
		<% @rows.each do |row| %>
			<tr>
				<% row.each do |classroom| %>
				<td>
					<% if classroom.is_a? Integer %>
						<%= "#{classroom}:00" %>
					<% elsif classroom.is_a? Hash %>
						<%= link_to classroom[:name], classroom_path(classroom[:id]) %>
					    					
					<% end %>

				</td>
				<% end %>

			</tr>
		<% end %>

		
		
	</tbody>

</table>


<%= render "shared/structural_link" %>
<%= render "shared/semantic_link" %>