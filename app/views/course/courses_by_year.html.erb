<h1>Courses by year</h1>

<style type="text/css">
table{
	border:1px solid;
}

td{
	

	border: 1px solid green;
}


</style>

<%= render "shared/hide_semantic_link" %>
<%= render "shared/hide_structural_link" %>

<table  >
	<tr>
		<th>Course Name	</th>
		<th>Professor</th>
		<th>Curricula</th>
		<th>Year</th>
	</tr>

	<% @courses.each do |course| %>
		<tr>
			<td><%= link_to course[:name], "../course/#{course[:id]}" %>	</td>
			<td><%= link_to course[:teacher], "../teacher/#{course[:teacher_id]}" %></td>
			<td>
				<% course[:curricula].each do |curriculum| %>
					<%= link_to curriculum[:name], "../curriculum/#{curriculum[:id]}" %>
					<br> <%# usato per mettere ogni elemento su una buona linea %>
					<%= link_to curriculum[:name], "../curriculum/#{curriculum[:id]}" %>
				<% end %>
			</td>
			<td><%= course[:year].year %></td>

		</tr>
	<% end %>

