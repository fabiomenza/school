<%= title "Listing Awards" %>

<%= link_to "New Award", new_award_path, {class: "new_button"} %>
<br><br>

<table class="styled-table" >
	<thead>
		<tr>
			<th>Title </th>
			<th>Description</th>
			<th>Time</th>
			<th colspan=3></th>


		</tr>

	</thead>
	<tbody>

			<% @awards.each do |award| %>
				<tr>
					<td><%= award.title %></td>
					<td><%= award.description.split[0...10].join(' ') %></td>
					<td><%= award.date %></td>
					
					<td><%= link_to 'Show', award_path(award) %></td>
					<td><%= link_to 'Edit', edit_award_path(award) %></td>
					<td><%= link_to 'Destroy', award_path(award), method: :delete,data: { confirm: 'Are you sure?' }  %></td>
					

				</tr>

			<% end %>

	</tbody>


</table>


<%= render "shared/semantic_link" %>
<%= render "shared/hide_structural_link" %>