
<table width="700px"><tr>
	<td>
		<p>Find event by type:</p>
		<ul>
		<% @types.each do |element| %>
			  <li><a href="<%= element[:value] %>"><%= element[:name] %> events</a></li>
		<% end %>
		</ul>
	</td>
	<td>
<%= form_tag "/events/bydate", :name => "eventByDate" do %>
		<p>Find event by date:</p>
		<p>Date: <input type="text" id="datepicker" name="date"></p>
  		<input type="submit" value="Search">
<% end %>
	</td>
</tr></table>


<h2>All Events</h2>
<ul>
<% @events.each do |element| %>
	  <li><a href="<%= element[:value] %>"><%= element[:name] %></a></li>
<% end %>
</ul>
