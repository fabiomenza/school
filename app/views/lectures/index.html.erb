<h1>Listing lectures for <%= @course.name %></h1>

<%= link_to "New Lecture", new_course_lecture_path, {class: "new_button"} %>
<br><br>

<table class="styled-table" >
	<thead>
		<tr>
			<th>Name </th>
			<th>Start</th>
			<th>End</th>
			<th colspan=2></th>


		</tr>

	</thead>
	<tbody>

			<% @lectures.each do |lecture| %>
				<tr>
					<td><%= lecture.w_day %></td>
					<td><%= "#{lecture.start_time.hour}:00" %></td>
					<td><%= "#{lecture.end_time.hour}:00" %></td>
					
					<td><%= link_to 'Edit', edit_course_lecture_path(lecture.course, lecture) %></td>
					<td><%= link_to 'Destroy', course_lecture_path(lecture.course, lecture), method: :delete,data: { confirm: 'Are you sure?' }  %></td>
					

				</tr>

			<% end %>

	</tbody>


</table>


<%= render "shared/semantic_link" %>
<%= render "shared/hide_structural_link" %>
