
<%= form_for what, url:{ controller: 'exam', action: to_do}, method: to_met do |f| %>

  <p><%= f.label :name %> <br/>
    <%= f.text_field :name %>
  </p>
  <p><%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>
  <p><%= f.label :time %> <br/>
    <%= f.datetime_select :time %>
  </p>
  <p><%= f.label :course_id %> <br/>
    <%= f.select :course_id, Course.order('name ASC').map{|t| [ "#{t.name} ",t.id] }  %>
  </p>
  <p><%= f.label :classroom_id %> <br/>
    <%= f.select :classroom_id, Classroom.order('name ASC').map{|t| [ "#{t.name} ",t.id] }  %>
  </p>

  <br><%= f.submit %>
  <% end %>
