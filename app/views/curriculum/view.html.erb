<h1><%= @title %></h1>
<p><%= @description %></p>
<h2>Courses in this curriculum</h2>
<ul class="curriculum-list">
<% @courses.each do |course| %>
	  <li><%= link_to course.name, course_path(course), {class: "simple-link"}  %></li>
<% end %>
</ul>

<%= will_paginate @courses %>

