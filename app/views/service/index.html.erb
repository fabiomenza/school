<%= title "Listing Services" %>

<%= link_to "New Service", new_service_path, {class: "new_button"} %>

<br><br>

<table class="styled-table" >
	<thead>
		<tr>
			<th>Name </th>

			
			<th colspan=4></th>


		</tr>

	</thead>
	<tbody>

			<% @services.each do |service| %>
				<tr>
					<td><%= service.name %></td>
					<td><%= link_to 'Show', service_path(service) %></td>
					<td><%= link_to 'Edit', service_path(service) + "/edit" %></td>
					<td><%= link_to 'Destroy', service_path(service), method: :delete,data: { confirm: 'Are you sure?' }  %></td>

				</tr>

			<% end %>

	</tbody>


</table>

<%= will_paginate @services %>

<%= render 'shared/hide_semantic_link' %>
<%= render 'shared/hide_structural_link' %>
