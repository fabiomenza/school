<%= title "Listing Events" %>

<%= link_to "New Event", new_event_path, {class: "new_button"} %>

<br><br>

<table class="styled-table" >
	<thead>
		<tr>
			<th>Name </th>

			
			<th colspan=4></th>


		</tr>

	</thead>
	<tbody>

			<% @events.each do |event| %>
				<tr>
					<td><%= event.name %></td>
					<td><%= link_to 'Show', event_path(event) %></td>
					<td><%= link_to 'Edit', event_path(event) + "/edit" %></td>
					<td><%= link_to 'Destroy', event_path(event), method: :delete,data: { confirm: 'Are you sure?' }  %></td>

				</tr>

			<% end %>

	</tbody>


</table>

<%= will_paginate @events %>

<%= render 'shared/hide_semantic_link' %>
<%= render 'shared/hide_structural_link' %>
